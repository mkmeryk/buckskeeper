<div style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;">

    <h1 class="text-center">Sign Up</h1>

    <%= form_with model: @user do |f|%>
    <% if @user.errors.any? %>
        <p><%= @user.errors.full_messages.join(', ') %> </p>
    <% end %>
        
        <div class="p-1">
            <%= f.label :first_name%>
            <%= f.text_field :first_name ,class:"form-control"%>
        </div>
        
        <div class="p-1">
            <%= f.label :last_name%>
            <%= f.text_field :last_name ,class:"form-control"%>
        </div>
        <div class="p-1">
            <%= f.label :email%>
            <%= f.text_field :email ,class:"form-control"%>
        </div>
        <div class="p-1">
            <%= f.label :phone_number%>
            <%= f.text_field :phone_number ,class:"form-control"%>
        </div>
        <div class="p-1">
            <%= f.label :password%>
            <%= f.text_field :password ,class:"form-control"%>
        </div>
        <div class="p-1">
            <%= f.label :password_confirmation%>
            <%= f.text_field :password_confirmation ,class:"form-control"%>
        </div>
        <div>
            <small>
                <p>What type of account would you like to signup for?</p>
                <p>You can also sign up for both</p>
            </small>
            
            <%= f.check_box :is_individual %>
            <%= f.label :is_individual, "Personal Account" %>

            <%= f.check_box :is_business %>
            <%= f.label :is_business, "Small Business Account" %>

        </div>
        <%= f.submit "Sign Up" , class:"btn btn-primary" %>
    <% end %>

</div>