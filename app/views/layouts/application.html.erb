<!DOCTYPE html>
<html>
  <head>
    <title>Buckskeeper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/cd1e882747.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="utilities.css">
  </head>

  <body>
    <div class="navbar">
      <div class="container flex">
        <h1 class="logo"><%= link_to 'Buckskeeper', root_path %></h1>
        <nav>
          <ul>
            <li><%= link_to 'FLH', flh_path %></li>
            <%if(user_signed_in?) %>
              <% if current_user.is_individual == true %>
                <li><%= link_to 'Personal Finances', personal_path %></li>
              <% end %>
              <% if current_user.is_business == true %>
                <li><%= link_to 'Business Finances', business_path %></li>
              <% end %>
              <% if current_user.is_advisor == true %>
                <li><%= link_to 'Panel', advisor_path %></li>
              <% end %>
              <% if current_user.is_admin == true %>
                <li><%= link_to 'Panel', admin_path %></li>
              <% end %>
              <li><%= button_to "Log out", session_path, method: :delete, class:"btn btn-primary" %></li>
            <% else %>
              <li><%= link_to 'Sign In Page', new_session_path%></li>
            <% end %>
            
          </ul>
        </nav>
      </div>
    </div>
    
    <%= yield %>
    <footer class="footer">
      <div class="container flex">
        <h1 class="smd"><%= link_to 'Buckskeeper', root_path %></h1>
        <div class="footer flex">
          <div class="footer-item">
            <h3 class="smd">Legal</h3>
            <h3>Privacy Policy</h3>
            <h3>Terms & <br> Conditions</h3>
          </div>
          <div class="footer-item">
            <h3 class="smd">Startup</h3>
            <h3>About Us</h3>
            <h3>Our Team</h3>
            <h3>Our Mission</h3>
            <h3>Dev Team</h3>
          </div>
          <div class="footer-item">
            <h3 class="smd">Features</h3>
            <h3>Personal Finances</h3>
            <h3>Business Finances</h3>
            <h3>Finacial Litracy Hub</h3>
            <h3>Advisors Panel</h3>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
